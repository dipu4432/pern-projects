<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
            
        }

        .main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            padding: 20px;
        }
        
        footer {
            display: flex;
            height: 3rem;
            text-align: center;
            background-color: dimgray;
            justify-content: center;
            align-items: center;
            color: white;
        }
        .container-2{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .change-page{
            margin:20px 10px;
        }
        .change-page a{
            text-decoration: none;
            padding: 0 10px;

        }
    </style>
</head>

<body>

    <div class="content">
        <nav class="navbar bg-body-tertiary navbar bg-primary sticky-top new-style" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/data">Home</a>
                <div class="d-flex px-2">
                    <form class="d-flex" role="search" method="GET" action="/search/location">
                        <input class="form-control me-2" name="location" type="search" placeholder="Type location"
                            aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <form class="d-flex px-2" role="search" method="GET" action="/search/name">
                        <input class="form-control me-2" name="customer_name" type="search" placeholder="Type name"
                            aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>

                    <form class="d-flex" method="GET" action="/data/sort/date">
                        <button class="btn btn-outline-success" type="submit">Sort by date</button> &nbsp;
                    </form>
                </div>
            </div>
        </nav>

        <div class="container-2">

       
        <div class="main">
            <table class="table table-dark table-striped-columns" style="width: 90vw;">
                <thead>
                    <tr class="table-primary">
                        <th>Sno</th>
                        <th>Customer Name</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Location</th>
                        <th>Created Date</th>
                        <th>Created Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(row=> { %>
                        <tr>
                            <td>
                                <%= row.sno %>
                            </td>
                            <td>
                                <%= row.customer_name %>
                            </td>
                            <td>
                                <%= row.age %>
                            </td>
                            <td>
                                <%= row.phone %>
                            </td>
                            <td>
                                <%= row.location %>
                            </td>
                            <td>
                                <%= row.created_at.toISOString().split('T')[0]; %>
                            </td>
                            <td>
                                <%= row.created_at.toISOString().split('T')[1].split('.')[0]; %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
        <div class="change-page">
            <% if (pagination.prev) { %>
                <a href="/data?page=<%= pagination.prev %>">Previous </a>
            <% } %>
            <% if (pagination.next) { %>
                <a href="/data?page=<%= pagination.next %>">Next</a>
            <% } %>
        </div>

    </div>
    </div>


    <!-- footer -->
    <footer>
        &copy; 2024 | New Technology
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

</body>

</html>